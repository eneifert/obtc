<div class="row contact-us">
	<div class="col-md-5">
		<h2>Contact Us</h2>
		<img class="featurette-image img-responsive" alt="Image courtesy of bplanet / FreeDigitalPhotos.net"  src="<%= img_url_for_env('handshake.jpg')  %>">
	</div>
	<div class="col-md-7">
				
		<%= form_for Email.new do |email| %>		
			<div class="form-group">
			 	<%= email.label :name %>
				<%= email.text_field :name, :placeholder=>"Name", :class=>"form-control" %>		
			</div>
			<div class="form-group">
				<%= email.label :email %>
				<%= email.text_field :email, :placeholder=>"Email", :class=>"form-control" %>	
			</div>
			<div class="form-group">
				<%= email.label :message %>
				<%= email.text_area :message, :class=>"form-control", :rows=>"4" %>		
			</div>

			<button type="submit" class="btn btn-primary">Submit</button>
		<% end %>

	</div>		
</div>